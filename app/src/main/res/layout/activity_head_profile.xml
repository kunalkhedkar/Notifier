<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context="com.example.kaushal.notifier.HeadProfileActivity">
  <EditText
      android:gravity="center"
      android:layout_marginTop="15dp"
      android:id="@+id/headUsername"
      android:hint="Username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  <EditText
      android:layout_marginTop="15dp"
      android:layout_below="@id/headUsername"
      android:gravity="center"
      android:id="@+id/headName"
      android:hint="Full Name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <EditText
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/headName"
        android:id="@+id/InstituteName"
        android:hint="InstituteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

  <Button
      android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_color"
        android:onClick="save"
        android:id="@+id/save"
        android:text="save profile"
      android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/InstituteName"
 />

    <Button
        android:id="@+id/changePassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/save"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@drawable/button_color"
        android:onClick="changePassword"
        android:text="change password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
      />


  <ProgressBar
      android:id="@+id/ProgressBar"
      android:visibility="gone"
      android:layout_marginTop="30dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/changePassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</RelativeLayout>
