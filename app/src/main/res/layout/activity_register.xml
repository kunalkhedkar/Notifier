<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#464140"
        android:padding="40dp">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/my_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="text"
        android:background="@drawable/round_corner_style"
        android:gravity="center"
        android:id="@+id/Rname"
        android:hint="Name"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/Logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="text"
        android:background="@drawable/round_corner_style"
        android:gravity="center"
        android:id="@+id/Remail"
        android:hint="Username as Email"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Rname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/Rpassword"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:background="@drawable/round_corner_style"
            android:hint="Password"
            android:gravity="center"
            android:layout_below="@+id/Remail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp" />




        <EditText
            android:inputType="number"
            android:id="@+id/RroleNumber"
            android:hint="RoleNumber"
            android:background="@drawable/round_corner_style"
            android:layout_below="@id/Rpassword"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            />



    <EditText
        android:inputType="number"
        android:background="@drawable/round_corner_style"
        android:gravity="center"
        android:id="@+id/Rmobile"
        android:hint="Mobile"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/RroleNumber"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="text"
        android:background="@drawable/round_corner_style"
        android:gravity="center"
        android:id="@+id/Raddres"
        android:hint="Adress"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/Rmobile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


        <Spinner
            android:id="@+id/Rrole"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/Raddres"
            android:background="@drawable/round_corner_style"
            android:layout_width="match_parent"
            >
        </Spinner>

        <Spinner
            android:id="@+id/Rclass"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/Rrole"
            android:background="@drawable/round_corner_style"
            android:layout_width="match_parent">
        </Spinner>


        <Button
                android:onClick="registerOnClick"
                android:background="@drawable/button_color"
                android:id="@+id/Register"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rclass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp" />

</RelativeLayout>
</ScrollView>