<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:layout_height="match_parent"
    tools:context="com.example.kaushal.notifier.HeadProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <EditText
            android:id="@+id/headUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Username" />

        <EditText
            android:id="@+id/headName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headUsername"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/InstituteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headName"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="InstituteName" />

        <Button
            android:id="@+id/save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/InstituteName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_color"
            android:text="save profile"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_color"
            android:text="change password"
            android:textColor="#ffffff" />


        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/changePassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>
